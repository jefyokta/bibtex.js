{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",                  
    "module": "ESNext",                  
    "declaration": true,                 
    "declarationMap": true,              
    "emitDeclarationOnly": false,        
    "esModuleInterop": true,             
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true               
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
